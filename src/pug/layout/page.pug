include ../mixins/svg-icon
block variables

doctype html
html(lang="en")
    head
        meta(charset='UTF-8')
        meta(name="theme-color" content="#168dd3")
        meta(http-equiv='X-UA-Compatible', content="IE = edge")
        meta(name='viewport', content='initial-scale=1.0, width=device-width')
        title #{title}

        link(rel='stylesheet', href='/css/main.devmin.css')

        <!--[if lt IE 9]>
        script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
        <![endif]-->

    body(class=pageClass)
        #page
            //- Include header
            include ../regions/header.pug

            .container.maincontainer

                if(pageClass != 'homepage')
                    //- Breadcrumbs
                    nav.breadcrumbs
                        ul.breadcrumbs__list
                            li
                                a(href="#") Главная
                                span.divider /
                            li.active #{title}

                block top-position
                .row
                    block columns
                block bottom-position

            //- Include footer
            include ../regions/footer.pug

        //- Callback form
        #callback.zoom-anim-dialog.mfp-hide.white-block.callback-block
            form#callbackForm.form__form.callback-form(action='#')
                fieldset.form__fields.form__hide-success
                    legend.form__title Мы вам перезвоним!
                    .form-group
                        input#name.inputbox(name='name', type='text', placeholder='Ваше имя*', required)
                    .form-group
                        input#phone.inputbox.phoneMask(name='phone', type='text', placeholder='Ваш телефон*', required)
                    input(type='hidden', name='go', value='5')
                    input(type='hidden', name='submitCallback', value='callback')
                    .btn-block
                        button.btn-submit.btn.btn-primary.btn-block(type='submit') Отправить

        .d-none
            include ../../../build/images/sprite.svg

        a.go_top_link(href='#', style='display:none;')
            +icon('arrow-up')
        script(src='//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(src='/js/scripts.min.js')
        block script